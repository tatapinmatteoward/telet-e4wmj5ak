---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/members-only', label: 'Members-Only' },
  { href: '/gallery', label: 'Gallery' },
  { href: '/merchandise', label: 'Merchandise' },
  { href: '/events', label: 'Events' },
  { href: '/quiz', label: 'Quiz' }
];
---

<nav class="bg-[#ff7f50] shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-white">Teletubby Troupe Central</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-6">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="text-white hover:text-[#98fb98] transition-colors duration-300 font-medium"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-white">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 flex flex-col gap-4 pb-4">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-white hover:text-[#98fb98] transition-colors duration-300 font-medium py-2 px-4 rounded-lg bg-[#ff6347] hover:bg-[#ff4500] transition-all duration-300"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<!-- Client-side JavaScript for mobile toggle -->
<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  if (button && menu) {
    button.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>